#!/bin/bash

############################################

function rekt()
{
  mkdir temp
  cd temp/
  git init
  cd ../

  for branch in $(git branch | cut -c3-)
  do
    cd temp/
    git checkout --orphan "$branch"
    cd ../
    git checkout "$branch"
    cp -r ./* temp/
  done

  cd temp/
  git commit -am "Git rekt, Mr. Repository."
}

############################################
############################################

echo -n "You want git rekt? [y/n]"
read input

if [ "$input" == "y" ]
then
  rekt
  echo "Consider yourself rekt."
else
  echo "Chicken exit's right over here for you."
fi
